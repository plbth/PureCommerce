spring.application.name=purecommerce
# ===============================
# DATASOURCE
# JPA / HIBERNATE
# DO NOT COMMIT YOUR ACTUAL CREDENTIALS (gitignore)
# ===============================
spring.datasource.url=jdbc:mysql://localhost:3306/purecommercedb?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=YOUR_LOCAL_MYSQL_USERNAME
spring.datasource.password=YOUR_LOCAL_MYSQL_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Optional: Naming strategy for JPA to match snake_case in DB
# If your entity fields are camelCase (e.g., productName) and your DB columns are snake_case (e.g., product_name)
spring.jpa.hibernate.naming.physical-strategy=org.springframework.boot.orm.jpa.hibernate.SpringPhysicalNamingStrategy
spring.jpa.hibernate.naming.implicit-strategy=org.springframework.boot.orm.jpa.hibernate.SpringImplicitNamingStrategy